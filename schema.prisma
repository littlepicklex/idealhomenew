// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String
  createdAt    DateTime @default(now())
  
  // Relations
  favorites    Favorite[]
  
  @@map("users")
}

model Property {
  id              String   @id @default(cuid())
  title           String
  price           Float
  sqft            Int
  yearBuilt       Int      @map("year_built")
  beds            Int
  baths           Int
  lat             Float
  lng             Float
  type            String
  locationScore   Float    @map("location_score")
  safetyScore     Float    @map("safety_score")
  schoolScore     Float    @map("school_score")
  commuteMinutes  Int      @map("commute_minutes")
  idealityScore   Float    @map("ideality_score")
  createdAt       DateTime @default(now())
  
  // Relations
  favorites       Favorite[]
  
  @@map("properties")
}

model Favorite {
  id         String   @id @default(cuid())
  userId     String   @map("user_id")
  propertyId String   @map("property_id")
  createdAt  DateTime @default(now())
  
  // Relations
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  property   Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  
  // Ensure a user can only favorite a property once
  @@unique([userId, propertyId])
  @@map("favorites")
}
